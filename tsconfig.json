{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2015",
    "lib": [ "es2020", "dom" ],
    "declaration": false,
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "suppressExcessPropertyErrors": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
